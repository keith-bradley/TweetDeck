<Window x:Class="BirdTracker.Pin_Map.BirdToolTipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BirdToolTipWindow" Height="346" Width="236"  Background="Transparent">
    <Border BorderBrush="#262830" BorderThickness="4,4,4,4" CornerRadius="12,12,12,12" Margin="4,8,4,4">
        <Grid x:Name="MainGrid" Background="#262830" Height="300" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Height="20" Foreground="White" FontWeight="Bold">Common name</TextBlock>
            </StackPanel>
            <Image Grid.Row="1" x:Name="Image"></Image>
        </Grid>
    </Border>
</Window>
